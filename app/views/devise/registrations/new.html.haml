.container
  %section
    .row.center      
      %h2
        Registrierung
      %p
        noch ein paar Schritte und es kann los gehen. Wir fragen nur noch kurz Ihre grundlegenden Daten ab.
      .span.margintop20
        = form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:class => "form-horizontal"}) do |f| 
          = devise_error_messages!
          .control-group
            = f.label :firstname, "Vorname", :class => "control-label"
            .controls
              = f.text_field :firstname, :autofocus => true
          .control-group
            = f.label :lastname, "Nachname", :class => "control-label"
            .controls
              = f.text_field :lastname
          .control-group
            = f.label :gender, "Geschlecht", :class => "control-label"
            .controls
              = f.radio_button :gender, 'f', :checked => true
              weiblich
              = f.radio_button :gender, 'm'
              männlich
          .control-group
            = f.label :email, "E-Mailadresse", :class => "control-label"
            .controls
              = f.email_field :email
          .control-group
            = f.label :password, "Passwort wählen", :class => "control-label"
            .controls
              = f.password_field :password
          .control-group
            = f.label :password_confirmation, "Passwort wiederholen", :class => "control-label"
            .controls
              = f.password_field :password_confirmation
          .control-group
            .controls
              = f.submit "Jetzt registrieren", :class => "btn btn-landing btn-large" 

