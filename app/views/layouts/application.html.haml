!!!
%html{:lang => "en"}
  %head
    %meta{:charset => "utf-8"}/
    %title 
      = @title || "Vital Coaches Video Coaching"
    %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}/
    %meta{:content => "", :name => "description"}/
    %meta{:content => "", :name => "author"}/
    = yield :meta_tags
    / Le styles
    = stylesheet_link_tag "application"
    
    / Le HTML5 shim, for IE6-8 support of HTML5 elements
    /[if lt IE 9]
      <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
    / Le fav and touch icons
    %link{:href => "apple-touch-icon-144-precomposed.png", :rel => "apple-touch-icon-precomposed", :sizes => "144x144"}/
    %link{:href => "apple-touch-icon-114-precomposed.png", :rel => "apple-touch-icon-precomposed", :sizes => "114x114"}/
    %link{:href => "apple-touch-icon-72-precomposed.png", :rel => "apple-touch-icon-precomposed", :sizes => "72x72"}/
    %link{:href => "apple-touch-icon-57-precomposed.png", :rel => "apple-touch-icon-precomposed"}/
    
    = favicon_link_tag "favicon.png"
  %body
    / ################ NAVIGATION START ################
    .navbar-wrapper
      #navigation.navbar.navbar-fixed-top
        .navbar-inner
          .container
            %button.btn.btn-navbar{"data-target" => ".nav-collapse", "data-toggle" => "collapse", :type => "button"}
              %span.icon-bar
              %span.icon-bar
              %span.icon-bar
            %a.brand{:href => "/"}
              = image_tag "logo.png"              
            .nav-collapse.collapse
              %ul.nav.pull-right
                %li.active
                  %a{:href => "/"} Start
                %li
                  %a{:href => "/#features"} Leistungen                
                %li
                  %a{:href => "/#testimonials"} Userstimmen
                %li
                  = link_to "Coaches", coaches_path                  
                %li
                  = link_to "Gründer", about_path
                %li
                  = link_to "Registrieren", new_user_registration_path
                %li
                  = link_to "Einloggen", sign_in_path
                  
    / ################ NAVIGATION END ################
    / ################ WRAP START ################
    #wrap
      = yield
     
      / ################ PUSH WILL KEEP THE FOOTER AT BOTTOM IF YOU WANT TO CREATE OTHER PAGES ################
      #push
    / ################ FOOTER START ################
    %footer#footer.margintop20
      .container
        .row
          .span4
            %h2 über uns...
            = image_tag "logo.png"            
            %p Ernährungsberatung seit 10 Jahren. Online-Coaching seit 2013.
            %p.copyright
              © 2013 Vital Coaches.
          .span2
            %h2 links
            %ul.unstyled.margintop20
              %li 
                = link_to "Über uns", about_path
              %li Blog
              %li Geschichte
              %li
                = link_to "Coaches", coaches_path
          .span3
            %h2 Newsletter
            .input-append.margintop20
              %input#appendedInputButton.span2{:placeholder => "deine E-Mailadresse..", :type => "text"}/
              %button#newsletter.btn{:type => "button"} abonnieren!
            %ul.inline.social.margintop20
              %li
                %i.icon-facebook
              %li
                %i.icon-twitter
              %li
                %i.icon-linkedin
          .span3
            %h2
              tweets
              %i.icon-twitter
            %ul#twitter.margintop20
    / ################ FOOTER END ################
    / ################ JAVASCRIPTS ################
    / Placed at the end of the document so the pages load faster
    = javascript_include_tag "application"   
    = render "layouts/google_analytics"
    :javascript      
      $('#more_infos_button_top').on('click', function() {
        ga('send', 'event', 'button', 'click', 'more_infos_button_top');
      });
      $('#more_infos_button_bottom').on('click', function() {
        ga('send', 'event', 'button', 'click', 'more_infos_button_bottom');
      });
      $('#newsletter').on('click', function() {
        ga('send', 'event', 'button', 'click', 'newsletter');
      });
= yield :inline_scripts