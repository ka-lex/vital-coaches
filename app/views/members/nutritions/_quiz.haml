- content_for :page_specifc_css do
  :css
    .draggable { width: 90px; height: 90px; padding: 0.5em; float: left; margin: 10px 10px 10px 0; }
    .dropable { width: 120px; height: 120px; padding: 0.5em; float: left; margin: 10px; }
- content_for :scripts do
  %script{:src => "http://code.jquery.com/ui/1.10.3/jquery-ui.js"}
- content_for :inline_scripts do
  :javascript
    $(document).ready( function() {
      $(".draggable").draggable({ revert: "invalid" });
      $( "#answerbox1" ).droppable({
        accept: "#answer2",
        activeClass: "ui-state-hover",
        drop: function( event, ui ) {
          $( this )
            .addClass( "ui-state-highlight" )
            .find( "p" )
              .html( "Dropped!" );
        }
      });
    });