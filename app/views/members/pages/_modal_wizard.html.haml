    %button.btn.btn-small.btn-prev
      %i.icon-arrow-left
      Prev
    %button.btn.btn-success.btn-small.btn-next{"data-last" => "Absenden "}
      Next
      %i.icon-arrow-right.icon-on-right
    %button.btn.btn-danger.btn-small.pull-left{"data-dismiss" => "modal"}
      %i.icon-remove
      Cancel