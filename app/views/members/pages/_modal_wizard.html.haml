%h4.lighter
  %i.icon-hand-right.icon-animated-hand-pointer.blue
  %a.pink{"data-toggle" => "modal", :href => "#modal-wizard"} Wizard Inside a Modal Box
#modal-wizard.modal.hide
  .modal-header{"data-target" => "#modal-step-contents"}
    %ul.wizard-steps.clearfix
      %li.active{"data-target" => "#modal-step1"}
        %span.step 1
        %span.title PersÃ¶nliche Daten
      %li{"data-target" => "#modal-step2"}
        %span.step 2
        %span.title Vorlieben
      %li{"data-target" => "#modal-step3"}
        %span.step 3
        %span.title Adresse
      %li{"data-target" => "#modal-step4"}
        %span.step 4
        %span.title Zahlungsinfos
  #modal-step-contents.modal-body.step-content
    #modal-step1.step-pane.active
      .center
        %h4.blue Step 1
      %form#validation-form.form-horizontal{:method => "get"}
        .control-group
          %label.control-label{:for => "email"} Email Address:
          .controls
            .span12
              %input#email.span6{:name => "email", :type => "email"}/
        .control-group
          %label.control-label{:for => "password"} Password:
          .controls
            .span12
              %input#password.span4{:name => "password", :type => "password"}/
        .control-group
          %label.control-label{:for => "password2"} Confirm Password:
          .controls
            .span12
              %input#password2.span4{:name => "password2", :type => "password"}/
        .hr.hr-dotted
        .control-group
          %label.control-label{:for => "name"} Company Name:
          .controls
            %span.span12
              %input#name.span6{:name => "name", :type => "text"}/
        .control-group
          %label.control-label{:for => "phone"} Phone Number:
          .controls
            .span3.input-prepend
              %span.add-on
                %i.icon-phone
              %input#phone.span12{:name => "phone", :type => "tel"}/
        .control-group
          %label.control-label{:for => "url"} Company URL:
          .controls
            .span12
              %input#url.span8{:name => "url", :type => "url"}/
        .hr.hr-dotted
        .control-group
          %label.control-label Subscribe to
          .controls
            %span.span12
              %label
                %input{:name => "subscription", :type => "checkbox", :value => "1"}/
                %span.lbl Latest news and announcements
              %label
                %input{:name => "subscription", :type => "checkbox", :value => "2"}/
                %span.lbl Product offers and discounts
        .control-group
          %label.control-label Gender
          .controls
            %span.span12
              %label.blue
                %input{:name => "gender", :type => "radio", :value => "1"}/
                %span.lbl Male
              %label.blue
                %input{:name => "gender", :type => "radio", :value => "2"}/
                %span.lbl Female
        .hr.hr-dotted
        .control-group
          %label.control-label{:for => "state"} State
          .controls
            %span.span12
              %select#state.select2{"data-placeholder" => "Click to Choose...", :name => "state"}
